<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Simple Material 3 compatible styles -->
    
    <!-- Material 3 Alert Dialog styles -->
    <style name="AlertDialog.TitleText" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="AlertDialog.BodyText" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <!-- Material 3 Button styles -->
    <style name="DecisionMaker.Button" parent="Widget.Material3.Button">
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="DecisionMaker.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Material 3 Text Input styles -->
    <style name="DecisionMaker.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <!-- Bottom Navigation style -->
    <style name="DecisionMaker.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">?attr/colorOnPrimary</item>
        <item name="itemTextColor">?attr/colorOnPrimary</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>
</resources>