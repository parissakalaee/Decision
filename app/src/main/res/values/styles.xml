<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/yekan</item>
    </style>

    <style name="EditTextCustomized">
        <item name="android:background">@drawable/shape_bg_edt_white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">false</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHighlight">#66A67B00</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="HelpTextBlack">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="AboutTextBlack">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="ResultTextBlack">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.33</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="YesNoButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:background">@drawable/selector_btn_beryl_green</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ButtonLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="MessageTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MessageLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_bg_edt_aqua</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="MessageScrollBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbarSize">4dp</item>
        <item name="android:scrollbarThumbVertical">@drawable/shape_bg_scrollbar</item>
    </style>

</resources>