<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <corners android:radius="5dip" />

            <stroke android:width="1dip" android:color="@color/atoll" />

            <gradient android:angle="-90" android:endColor="@color/fountain_blue" android:startColor="@color/blue_stone" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <corners android:radius="5dip" />

            <stroke android:width="1dip" android:color="@color/atoll" />

            <solid android:color="@color/scooter" />
        </shape></item>
    <item android:state_enabled="true"><shape android:shape="rectangle">
            <corners android:radius="5dip" />

            <stroke android:width="1dip" android:color="@color/atoll" />

            <gradient android:angle="-90" android:endColor="@color/scooter" android:startColor="@color/spray" />
        </shape></item>
    <item android:state_enabled="false"><shape android:shape="rectangle">
            <corners android:radius="5dip" />

            <stroke android:width="1dip" android:color="@color/beryl_green" />

            <solid android:color="@color/grey_nurse" />
        </shape></item>

</selector>