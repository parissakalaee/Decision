<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/ButtonLayout">

        <Button
            android:id="@+id/btnEnglishFragmentSetting"
            style="@style/YesNoButton"
            android:layout_width="0dp"
            android:layout_marginEnd="228dp"
            android:text="@string/language_fragment_english"
            app:layout_constraintEnd_toStartOf="@+id/btnFarsiFragmentSetting"
            app:layout_constraintTop_toTopOf="@id/btnFarsiFragmentSetting" />

        <Button
            android:id="@+id/btnFarsiFragmentSetting"
            style="@style/YesNoButton"
            android:layout_height="48dp"
            android:layout_marginTop="80dp"
            android:text="@string/language_fragment_farsi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.738"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>