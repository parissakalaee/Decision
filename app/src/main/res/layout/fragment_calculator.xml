<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false"
    android:padding="4dp"
    android:scrollbarSize="4dip"
    android:scrollbarThumbVertical="@drawable/shape_bg_scrollbar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/dice_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/vector_empty_dice" />

        <Button
            android:id="@+id/btnQ_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/selector_btn_atoll"
            android:padding="4dp"
            android:text="@string/calculator_action_subject"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnQ_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/selector_btn_atoll"
            android:padding="4dp"
            android:text="@string/calculator_action_alternatives"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnQ_3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/selector_btn_atoll"
            android:padding="4dp"
            android:text="@string/calculator_action_criteria"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnQ_4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/selector_btn_atoll"
            android:padding="4dp"
            android:text="@string/calculator_action_prioritize_alternatives"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnQ_5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/selector_btn_atoll"
            android:padding="4dp"
            android:text="@string/calculator_action_prioritize_criteria"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center" >

            <Button
                android:id="@+id/btnReset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/selector_btn_beryl_green"
                android:padding="4dp"
                android:text="@string/all_action_clear"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnCompute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/selector_btn_beryl_green"
                android:padding="4dp"
                android:text="@string/calculator_action_calculate"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>