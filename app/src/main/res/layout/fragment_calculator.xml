<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false"
    android:padding="4dp"
    android:scrollbarSize="4dip"
    android:scrollbarThumbVertical="@drawable/shape_bg_scrollbar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageViewDice"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/calculator_desc_dobblesteen"
            app:srcCompat="@drawable/vector_empty_dice"
            tools:srcCompat="@drawable/vector_dice_1" />

        <Button
            android:id="@+id/buttonQ1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/selector_btn_beryl_green"
            android:padding="4dp"
            android:text="@string/calculator_action_subject"/>

        <Button
            android:id="@+id/buttonQ2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/selector_btn_beryl_green"
            android:padding="4dp"
            android:text="@string/calculator_action_alternatives" />

        <Button
            android:id="@+id/buttonQ3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/selector_btn_beryl_green"
            android:padding="4dp"
            android:text="@string/calculator_action_criteria" />

        <Button
            android:id="@+id/buttonQ4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/selector_btn_beryl_green"
            android:padding="4dp"
            android:text="@string/calculator_action_prioritize_alternatives" />

        <Button
            android:id="@+id/buttonQ5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_beryl_green"
            android:text="@string/calculator_action_prioritize_criteria"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <Button
                android:id="@+id/buttonReset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.Button.Colored"
                android:text="@string/all_action_clear" />

            <Button
                android:id="@+id/buttonCompute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                style="@style/Widget.AppCompat.Button.Colored"
                android:text="@string/calculator_action_calculate" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>