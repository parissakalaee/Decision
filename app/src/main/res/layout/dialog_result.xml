                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/opensans_regular" />

            <TextView
                android:id="@+id/txt_number1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/opensans_regular" />
        </LinearLayout>

