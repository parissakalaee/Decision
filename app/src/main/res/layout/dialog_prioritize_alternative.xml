<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    style="@style/MessageScrollBar">

    <LinearLayout style="@style/MessageLayout" >

        <TextView
            android:id="@+id/txtMessage3"
            style="@style/MessageTextView"
            android:text="@string/holder_lorem_ipsum" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <com.parissakalaee.parkadecisionmaker.ViewAlternativeComp
                android:id="@+id/viewAlternativeComp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" >
            </com.parissakalaee.parkadecisionmaker.ViewAlternativeComp>

            <com.parissakalaee.parkadecisionmaker.ViewAlternativeComp
                android:id="@+id/viewAlternativeComp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" >
            </com.parissakalaee.parkadecisionmaker.ViewAlternativeComp>

            <com.parissakalaee.parkadecisionmaker.ViewAlternativeComp
                android:id="@+id/viewAlternativeComp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" >
            </com.parissakalaee.parkadecisionmaker.ViewAlternativeComp>

            <com.parissakalaee.parkadecisionmaker.ViewAlternativeComp
                android:id="@+id/viewAlternativeComp4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" >
            </com.parissakalaee.parkadecisionmaker.ViewAlternativeComp>

            <com.parissakalaee.parkadecisionmaker.ViewAlternativeComp
                android:id="@+id/viewAlternativeComp5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" >
            </com.parissakalaee.parkadecisionmaker.ViewAlternativeComp>
        </LinearLayout>

        <LinearLayout style="@style/ButtonLayout" >

            <Button
                android:id="@+id/btnCancel3"
                style="@style/YesNoButton"
                android:text="@string/action_clear" />

            <Button
                android:id="@+id/btnOk3"
                style="@style/YesNoButton"
                android:text="@string/action_ok" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>